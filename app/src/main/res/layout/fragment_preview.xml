<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".app.PreviewFragment">


    <ImageView
        android:id="@+id/imagePreviewHoler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_preview_holder"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha=".4"
        android:src="@android:color/black"/>

    <ImageButton
        android:id="@+id/button_done"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/circle_button_size"
        android:layout_height="@dimen/circle_button_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/button_margin_end"
        android:layout_marginRight="@dimen/button_margin_end"
        android:width="@dimen/circle_button_size"
        android:height="@dimen/circle_button_size"
        android:background="@drawable/circle_button"
        android:gravity="center_vertical|end"
        android:src="@drawable/ic_done_white_36dp"/>

    <EditText
        android:id="@+id/selectedPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button_done"
        android:layout_marginLeft="@dimen/button_margin_end"
        android:layout_marginStart="@dimen/button_margin_end"
        android:background="@drawable/circle_button"
        android:hint="@string/selected_pic_number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/primary_light"
        android:textColorHint="@color/primary_light"
        android:textSize="50sp"
        android:textStyle="bold"/>

</RelativeLayout>
